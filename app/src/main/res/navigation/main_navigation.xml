<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/main_navigation"
            app:startDestination="@id/mainScreen">

    <fragment android:id="@+id/mainScreen"
              android:name="com.example.habbit.MainScreen"
              android:label="Habbit"
              tools:layout="@layout/main_screen">
        <action android:id="@+id/action_mainScreen_to_itemScreen" app:destination="@id/itemScreen"/>
    </fragment>

    <fragment android:id="@+id/aboutScreen"
              android:name="com.example.habbit.AboutScreen"
              android:label="About"
              tools:layout="@layout/about_screen"/>

    <fragment android:id="@+id/allStatScreen" android:name="com.example.habbit.AllStatScreen"
              android:label="General statistics"
              tools:layout="@layout/allstat_screen"/>

    <fragment android:id="@+id/addHabbitScreen"
              android:name="com.example.habbit.AddHabbitScreen"
              android:label="Add habit"
              tools:layout="@layout/addhabbit_screen">
        <action android:id="@+id/action_addHabbitScreen_to_mainScreen" app:destination="@id/mainScreen"/>
    </fragment>
    <fragment android:id="@+id/itemScreen" android:name="com.example.habbit.ItemScreen" android:label="ItemScreen">
        <action android:id="@+id/action_itemScreen_to_mainScreen" app:destination="@id/mainScreen"/>
    </fragment>
</navigation>